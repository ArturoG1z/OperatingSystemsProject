{
	"env": {
		"es2021": true,
		"node": true,
		"browser": true
	},
	"extends": ["airbnb-base"],
	"parserOptions": {
		"ecmaVersion": 12
	},
  "settings": {
    "import/core-modules": [ "electron" ]
  },
	"rules": {
		"no-restricted-syntax": [
			"error",
			"ForInStatement",
			"LabeledStatement",
			"WithStatement"
		],
		"operator-linebreak": [
			"error",
			"after",
			{
				"overrides": {
					":": "after",
          "+": "before"
				}
			}
		]
	}
}
